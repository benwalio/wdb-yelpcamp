<%- include("parts/header") %>

<div class="container">
    <h1 class="page-header text-center">sign up form</h1>
    <form class="form-horizontal col-sm-offset-2 col-sm-8" action="/register" method="POST">
        <div class="form-group">
            <label for="inputUsername" class="col-sm-2 control-label">username</label>
            <div class="col-sm-10">
                <input class="form-control" id="inputUsername" type="text" name="username" placeholder="username">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">password</label>
            <div class="col-sm-10">
                <input class="form-control" id="inputPassword" type="password" name="password" placeholder="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">register</button>
            </div>
        </div>
    </form>
</div>


<%- include("parts/footer") %>